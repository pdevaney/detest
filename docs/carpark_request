<body>

  <form id="dataForm">
    <h2>Carparking Request</h2>

    <input type="hidden" id="form_type" value="3">
    <input type="hidden" id="form_subtype" value="1">

    <label for="parking_date">
      What date are you interested in parking at Directioneering?
    </label>
    <input type="date" id="parking_date" required>

    <label for="reception_questions">
      Do you have any questions for our reception?
    </label>
    <textarea
      id="reception_questions"
      placeholder="Optional"></textarea>

    <button type="submit" id="submitBtn">Submit request</button>
  </form>

  <div id="sending" class="message">Sending requestâ€¦</div>
  <div id="response" class="message">Thank you for your submission. Your request has been sent.</div>
  <div id="error" class="message">There was a problem sending your request. Please try again.</div>

  <script>
    const iframeSrc = window.location.href;

    function getQueryParamsFromSelf() {
      const params = {};
      const usp = new URLSearchParams(window.location.search);
      for (const [key, value] of usp.entries()) {
        params[key] = value;
      }
      return params;
    }

    document.getElementById('dataForm').addEventListener('submit', async function (e) {
      e.preventDefault();

      const submitBtn = document.getElementById('submitBtn');
      const sendingMsg = document.getElementById('sending');
      const responseMsg = document.getElementById('response');
      const errorMsg = document.getElementById('error');

      errorMsg.style.display = 'none';
      responseMsg.style.display = 'none';

      submitBtn.disabled = true;
      sendingMsg.style.display = 'block';

      const payload = {
        form_type: document.getElementById('form_type').value,
        form_subtype: document.getElementById('form_subtype').value,
        iframe_params: {
          ...getQueryParamsFromSelf(),
          iframe_src: iframeSrc
        },
        form_details: {
          parking_date: document.getElementById('parking_date').value,
          reception_questions: document.getElementById('reception_questions').value || ""
        }
      };

      try {
        const res = await fetch(
          'https://apim.eu.workato.com/211811_directioneering/form_submission-v1/form_submit',
          {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'api-token': '7283fa530d66f0b81b48eb9a4ce5b56176d7e6388154ca2a273280db379d8775'
            },
            body: JSON.stringify(payload)
          }
        );

        sendingMsg.style.display = 'none';

        if (!res.ok) {
          submitBtn.disabled = false;
          errorMsg.style.display = 'block';
          return;
        }

        document.getElementById('dataForm').style.display = 'none';
        responseMsg.style.display = 'block';

      } catch (err) {
        sendingMsg.style.display = 'none';
        submitBtn.disabled = false;
        errorMsg.style.display = 'block';
      }
    });
  </script>

</body>
